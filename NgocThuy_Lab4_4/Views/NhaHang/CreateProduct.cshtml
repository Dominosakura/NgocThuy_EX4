@model NgocThuy_Lab4_4.Models.Product

@{
    ViewBag.Title = "Tạo sản phẩm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo sản phẩm mới</h2>

@using (Html.BeginForm("CreateProduct", "NhaHang", FormMethod.Post))
{
    <!-- Dropdown for Category Selection -->
    <div class="form-group">
        @Html.Label("CategoryId", "Chọn loại thực đơn")
        <select name="categoryId" class="form-control">
            <option value="">--Chọn loại thực đơn--</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProductId, "Mã sản phẩm")
        @Html.TextBoxFor(m => m.ProductId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProductName, "Tên sản phẩm")
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Unit, "Đơn vị")
        @Html.TextBoxFor(m => m.Unit, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Unit)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price, "Giá")
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>

    <button type="submit" class="btn btn-primary">Tạo mới</button>
}

<p>
    @Html.ActionLink("Trở về danh sách", "Index", new { @class = "btn btn-secondary" })
</p>
