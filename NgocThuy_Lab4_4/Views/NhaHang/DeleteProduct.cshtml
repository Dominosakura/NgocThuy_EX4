@model NgocThuy_Lab4_4.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa sản phẩm</h2>

<div class="alert alert-danger">
    <p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>
    <ul>
        <li><strong>Mã sản phẩm:</strong> @Model.ProductId</li>
        <li><strong>Tên sản phẩm:</strong> @Model.ProductName</li>
        <li><strong>Đơn vị:</strong> @Model.Unit</li>
        <li><strong>Giá:</strong> @Model.Price.ToString("C")</li>
    </ul>
</div>

@using (Html.BeginForm("DeleteProductConfirmed", "NhaHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("productId", Model.ProductId) 
    <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
 

    <button type="submit" class="btn btn-danger">Xóa</button>
    @Html.ActionLink("Hủy", "Index", new { categoryId = ViewBag.CategoryId }, new { @class = "btn btn-secondary" })
}
