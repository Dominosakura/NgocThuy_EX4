@model NgocThuy_Lab6.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4">Edit Product</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.HiddenFor(m => m.ProductId)

                @Html.LabelFor(m => m.ProductName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Enter product name" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter product price" })
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        }
    </div>
</div>
