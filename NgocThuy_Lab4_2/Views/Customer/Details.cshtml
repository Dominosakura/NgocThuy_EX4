@model NgocThuy_Lab4_2.Models.Customer

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h4 class="mb-3">Chi tiết khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Mã khách hàng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>

        <dt class="col-sm-3">
            Họ và tên
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt class="col-sm-3">
            Địa chỉ
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-3">
            Email
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3">
            Điện thoại
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-3">
            Số dư
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>

    <div class="mt-3">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-warning" })
        |
        @Html.ActionLink("Quay lại danh sách", "GetCustomers", null, new { @class = "btn btn-secondary" })
    </div>
</div>
